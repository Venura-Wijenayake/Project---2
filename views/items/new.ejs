<%- include('../partials/header') %>

<main class="container">
  <h1><strong>Add New Item</strong></h1>
  <form id="new-form" action="/items" method="POST">
    <div class="form-container">
      <!-- First Column -->
      <div class="form-column">
        <!-- Item Name -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <!-- Class -->
        <label for="class">Class:</label>
        <input type="text" id="class" name="class" required>

        <!-- Is a Weapon (Checkbox) -->
        <label for="isWeapon">Is a Weapon:</label>
        <input type="checkbox" id="isWeapon" name="isWeapon">

        <!-- Range -->
        <label for="range">Range (e.g., 100m):</label>
        <input type="text" id="range" name="range" required>

        <!-- RoF (Rate of Fire) -->
        <label for="RoF">RoF (e.g., -/-/-):</label>
        <input type="text" id="RoF" name="RoF" required>

        <!-- Damage -->
        <label for="damage">Damage:</label>
        <input type="text" id="damage" name="damage" required>

        <!-- Penetration (Pen) -->
        <label for="pen">Pen:</label>
        <input type="number" id="pen" name="pen" required>
      </div>

      <!-- Second Column -->
      <div class="form-column">
        <!-- Clip -->
        <label for="clip">Clip:</label>
        <input type="text" id="clip" name="clip" required>

        <!-- Rld (Reload) -->
        <label for="rld">Rld (Reload Time):</label>
        <input type="text" id="rld" name="rld" required>

        <!-- Special Abilities -->
        <label for="special">Special Abilities:</label>
        <textarea id="special" name="special"></textarea>

        <!-- kg (Weight) -->
        <label for="kg">Weight (kg):</label>
        <input type="number" id="kg" name="kg" required>

        <!-- Availability -->
        <label for="availability">Availability:</label>
        <input type="text" id="availability" name="availability" required>
      </div>
    </div>
    
    <!-- Submit Button -->
    <button type="submit">Save Item</button>
  </form>
</main>

<%- include('../partials/footer') %>